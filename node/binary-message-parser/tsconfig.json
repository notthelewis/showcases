{
    "compilerOptions": {
        "target": "ES2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "outDir": "./dist/",
        "moduleResolution": "node"
    },
    "include": ["src/*.ts"],
    "watchOptions": {
        "excludeDirectories": ["**/node_modules"]
    }
}
